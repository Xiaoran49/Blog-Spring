<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.synu.mapper.MemberMapper">
    <resultMap id="BaseResultMap" type="com.example.synu.pojo.Member">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="sex" jdbcType="VARCHAR" property="sex" />
        <result column="salary" jdbcType="INTEGER" property="salary" />
        <result column="department" jdbcType="VARCHAR" property="department" />
        <result column="age" jdbcType="INTEGER" property="age" />
        <result column="del_flag" jdbcType="INTEGER" property="delFlag" />
    </resultMap>

    <sql id="Base_Column_List">
        id, name, sex, salary, department, age, del_flag
    </sql>


    <!-- 分页查询相关：查询员工总数，符合条件-->
    <sql id="queryWhere">
        <where>
            <if test="query.id != null and query.id !=0">
                id = #{query.id}
            </if>
            <if test="query.name != null and query.name.length() > 0">
                and name like concat('%',#{query.name},'%')
            </if>
            <if test="query.sex != null and query.sex.length() > 0">
                and sex = #{query.sex}
            </if>
            <if test="query.salary != null and query.salary > 0">
                and salary = #{query.salary}
            </if>
            <if test="query.department != null and query.department.length() > 0">
                and department = #{query.department}
            </if>
            <if test="query.age != null and query.age > 0">
                and age = #{query.age}
            </if>
            and del_flag = 0
        </where>

    </sql>
<!-- 分页查询-->
    <select id="selectPage" resultType="com.example.synu.pojo.Member">
        select
        <include refid="Base_Column_List"></include>
        from member
        <include refid="queryWhere"></include>
    </select>
<!--添加一条数据-->
    <insert id="MemInsert" parameterType="com.example.synu.pojo.Member">
        insert into member
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="name != null">
                name,
            </if>
            <if test="sex != null">
                sex,
            </if>
            <if test="salary != null">
                salary,
            </if>
            <if test="department != null">
                department,
            </if>
            <if test="age != null and age > 0">
                age,
            </if>
            del_flag,
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id,jdbcType=INTEGER},
            </if>
            <if test="name != null">
                #{name,jdbcType=VARCHAR},
            </if>
            <if test="sex != null">
                #{sex,jdbcType=VARCHAR},
            </if>
            <if test="salary != null">
                #{salary,jdbcType=INTEGER},
            </if>
            <if test="department != null">
                #{department,jdbcType=VARCHAR},
            </if>
            <if test="age != null and age > 0">
                #{age,jdbcType=INTEGER},
            </if>
            0
        </trim>
    </insert>

<!--查找需要修改的数据显示到页面上-->
    <select id="GetMember" parameterType="java.lang.Integer" resultType="com.example.synu.pojo.Member">
        select
        <include refid="Base_Column_List"></include>
        from member
        where id = #{id}
        and del_flag = 0
    </select>
<!--修改查找出来的那条数据-->
    <update id="MemUpdate" parameterType="com.example.synu.pojo.Member">
        update member
        <set>
            <if test="name != null">
                name = #{name,jdbcType=VARCHAR},
            </if>
            <if test="sex != null">
                sex = #{sex,jdbcType=VARCHAR},
            </if>
            <if test="salary != null">
                salary = #{salary,jdbcType=INTEGER},
            </if>
            <if test="department != null">
                department = #{department,jdbcType=VARCHAR},
            </if>
            <if test="age != null and age > 0">
                age = #{age,jdbcType=INTEGER},
            </if>
        </set>
        where id = #{id}
    </update>
<!--删除一条数据-->
    <delete id="MemDelete" parameterType="java.lang.Integer">
        delete from member
        where id = #{id}
    </delete>





</mapper>